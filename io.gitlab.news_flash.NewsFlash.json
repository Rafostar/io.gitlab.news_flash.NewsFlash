{
    "app-id" : "io.gitlab.news_flash.NewsFlash",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "version": "23.08",
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "no-autodownload": false,
            "autodelete": false
        }
    },
    "command" : "io.gitlab.news_flash.NewsFlash",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/newsflash/cargo",
            "PASSWORD_CRYPT_KEY" : "@PASSWORD_CRYPT_KEY@"
        }
    },
    "modules" : [
        {
            "name": "gtuber",
            "buildsystem": "meson",
            "config-opts": [
                "-Dintrospection=disabled",
                "-Dvapi=disabled",
                "-Dgst-gtuber=enabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Rafostar/gtuber.git",
                    "branch": "main"
                }
            ]
        },
        {
            "name": "clapper",
            "buildsystem": "meson",
            "config-opts": [
                "-Dclapper=enabled",
                "-Dclapper-gtk=enabled",
                "-Dclapper-app=disabled",
                "-Dintrospection=enabled",
                "-Dvapi=enabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Rafostar/clapper.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.12.0"
                }
            ]
        },
        {
            "name" : "newsflash",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.com/api/v4/projects/8320003/packages/generic/newsflash/3.3.0/newsflash-3.3.0.tar.xz",
                    "sha256": "1367b30b7c629aef695f9a4f108a327c4797eff71ca391b9808e69a309753024"
                }
            ]
        }
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ]
}
