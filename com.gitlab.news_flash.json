{
    "app-id" : "com.gitlab.news_flash",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "com.gitlab.newsflash",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/newsflash/cargo",
            "PASSWORD_CRYPT_KEY" : "@PASSWORD_CRYPT_KEY@"
        }
    },
    "modules" : [
        {
            "name" : "newsflash",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.com/api/v4/projects/8320003/packages/generic/newsflash/2.3.1/newsflash-2.3.1.tar.xz",
                    "sha256": "8acd8ba5268375d614ea35b2d9b2447f37048059c2e0a7dba9ae2a92967b600d"
                }
            ]
        }
    ]
}
